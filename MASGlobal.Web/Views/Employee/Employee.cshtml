
@{
    ViewBag.Title = "Employee";
}
<h2>Employees</h2>

<div class="body-content">
    <form>
        <div class="form-inline">
            <label>Identification</label>
            <input type="text" id="txtid" placeholder="" class="txtForm" style="width:100%;" />
            <input id="btnGetEmployee" class="btn btn-primary" onclick="GetEmployees();" value="Get Employees" type="button" />
        </div>
    </form>
</div>
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Contract
            </th>
            <th>
                Role Id
            </th>
            <th>
                Role Name
            </th>
            <th>
                Role Description
            </th>
            <th>
                Hourly Salary
            </th>
            <th>
                Monthly Salary
            </th>
            <th>
                Annual Salary
            </th>
        </tr>
    </thead>
    <tbody class="temployees"></tbody>
</table>
<script src="~/Scripts/Employee/Employee.js"></script>
